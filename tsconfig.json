{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
        "rootDir": "./src/",
        "outDir": "./dist/",
        "strict": true,
        "moduleResolution": "node",
        "importHelpers": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "forceConsistentCasingInFileNames": true,
        "removeComments": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "sourceMap": false,
        "baseUrl": "./",
        "declaration": true,
        "lib": [
            "ESNext"
        ],
    },
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext",
            "target": "ESNext",
            "esModuleInterop": true,
            "allowSyntheticDefaultImports": true,
            "declaration": true,
            "lib": [
                "ESNext"
            ],
            "moduleResolution": "node",
        }
    },
    "files": [
        "src/Bot.ts"
    ],
    "include": [
        "./**/*.ts",
    ],
    "exclude": [
        "node_modules",
        "dist"
    ],
}