<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= task.title %> Â· Task</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <meta property="og:title" content="<%= task.title %>">
  <meta property="og:description" content="<%= (task.description||'').slice(0, 180) %>">
</head>
<body class="bg-[#0b0c10] text-white min-h-screen">
  <div class="max-w-3xl mx-auto p-6">
    <div class="mb-6">
      <a href="/" class="text-sm text-blue-400">Zumito Bot</a>
    </div>
    <h1 class="text-2xl font-bold"><%= task.title %></h1>
    <div class="mt-2 text-sm text-gray-300">Status: <span class="uppercase"><%= task.status %></span></div>
    <% if (task.owner && task.owner.name) { %>
    <div class="mt-2 flex items-center gap-2 text-sm text-gray-300">
      <span>Owner:</span>
      <% if (task.owner.avatar) { %><img src="<%= task.owner.avatar %>" class="w-6 h-6 rounded-full"/><% } %>
      <span><%= task.owner.name %></span>
    </div>
    <% } %>
    <div class="mt-4 whitespace-pre-wrap bg-[#111218] p-4 rounded"><%= task.description || '' %></div>
    <div class="mt-4 space-y-2">
      <% if (task.issue && task.issue.url) { %>
        <div>Issue: <a class="text-blue-400 hover:underline" href="<%= task.issue.url %>" target="_blank"><%= task.issue.repo %> #<%= task.issue.number %></a></div>
      <% } %>
      <% if (Array.isArray(task.pulls) && task.pulls.length) { %>
        <div>
          <div class="font-semibold">Pull Requests</div>
          <ul class="list-disc ml-6">
            <% task.pulls.forEach(p => { %>
              <li><a class="text-blue-400 hover:underline" href="<%= p.url %>" target="_blank"><%= p.repo %> #<%= p.number %></a> <span class="text-xs bg-[#1f2937] px-2 py-0.5 rounded ml-2"><%= p.state || 'unknown' %></span></li>
            <% }) %>
          </ul>
        </div>
      <% } %>
    </div>
    <div class="mt-6 text-sm text-gray-400">Public link: <span class="text-gray-200"><%= origin %>/tasks/<%= task.id %></span></div>
  </div>
</body>
</html>

