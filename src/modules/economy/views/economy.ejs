<div class="card mt-6">
    <form method="GET" action="/admin/economy" class="flex items-end gap-2">
        <div class="flex-1">
            <label class="block mb-1 text-sm">Discord User ID</label>
            <input name="userId" type="text" value="<%= userId || '' %>" class="w-full px-3 py-2 rounded bg-discord-dark-300 text-white" placeholder="1234567890" />
        </div>
        <button type="submit" class="btn-primary">Buscar</button>
    </form>
</div>

<% if (user) { %>
<div class="card mt-6">
    <div class="text-lg font-semibold mb-4">Editar econom√≠a de <%= username || userId %></div>
    <form method="POST" action="/admin/economy/update" class="space-y-4">
        <input type="hidden" name="userId" value="<%= userId %>" />
        <div>
            <label class="block mb-1 text-sm">Free Coins</label>
            <input type="number" name="free" value="<%= user.free %>" class="w-full px-3 py-2 rounded bg-discord-dark-300 text-white" />
        </div>
        <div>
            <label class="block mb-1 text-sm">Paid Coins</label>
            <input type="number" name="paid" value="<%= user.paid %>" class="w-full px-3 py-2 rounded bg-discord-dark-300 text-white" />
        </div>
        <div class="flex justify-end">
            <button type="submit" class="btn-primary">Guardar</button>
        </div>
    </form>
</div>
<% } %>
