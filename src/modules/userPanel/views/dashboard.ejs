<div class="w-full min-h-screen text-white p-4">
    <!-- Header con avatar y nombre del bot -->
    <div class="w-full bg-[#2f3136] rounded-lg shadow-xl overflow-hidden">
        <div class="bg-[#5865f2] h-24 relative">
            <div class="absolute -bottom-12 left-8">
                <img src="<%= botAvatar %>" alt="Bot Avatar" class="w-24 h-24 rounded-full border-4 border-[#2f3136]" />
            </div>
        </div>
        
        <div class="pt-16 pb-6 px-8">
            <h1 class="text-3xl font-bold text-white mb-1"><%= botName %></h1>
            <p class="text-[#b9bbbe] text-sm mb-6">ID: <%= botId %></p>
            
            <h2 class="text-xl font-semibold text-white mb-4 border-b border-[#40444b] pb-2">
                Servidores donde eres administrador
            </h2>
            
            <!-- Lista de servidores -->
            <div class="grid gap-3 mb-6">
                <% if (servers.length === 0) { %>
                    <div class="p-4 bg-[#40444b] rounded-md text-center">
                        <p class="text-[#b9bbbe]">No eres administrador en ningún servidor donde esté el bot.</p>
                    </div>
                <% } else { %>
                    <% servers.forEach(server => { %>
                        <a href="/userpanel/server/<%= server.id %>" class="group">
                            <div class="flex items-center p-3 bg-[#40444b] rounded-md hover:bg-[#454950] transition-all duration-200">
                                <div class="flex-shrink-0 mr-3">
                                    <% if (server.icon) { %>
                                        <img src="<%= server.icon %>" alt="<%= server.name %>" class="w-12 h-12 rounded-full" />
                                    <% } else { %>
                                        <div class="w-12 h-12 rounded-full bg-[#5865f2] flex items-center justify-center">
                                            <span class="text-lg font-semibold"><%= server.name.charAt(0) %></span>
                                        </div>
                                    <% } %>
                                </div>
                                <div class="flex-grow min-w-0">
                                    <h3 class="text-white font-medium truncate">
                                        <%= server.name %>
                                        <% if (server.isOwner) { %>
                                            <span class="ml-2 px-2 py-1 text-xs bg-[#5865f2] rounded-full">Propietario</span>
                                        <% } %>
                                    </h3>
                                    <p class="text-[#b9bbbe] text-xs">ID: <%= server.id %></p>
                                </div>
                                <div class="flex-shrink-0 ml-2">
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-[#b9bbbe] group-hover:text-white transition-all" viewBox="0 0 20 20" fill="currentColor">
                                        <path fill-rule="evenodd" d="M7.293 14.707a1 1 0 010-1.414L10.586 10 7.293 6.707a1 1 0 011.414-1.414l4 4a1 1 0 010 1.414l-4 4a1 1 0 01-1.414 0z" clip-rule="evenodd" />
                                    </svg>
                                </div>
                            </div>
                        </a>
                    <% }) %>
                <% } %>
            </div>
        </div>
    </div>
</div>
