<div class="card mt-6 flex flex-col md:flex-row items-center gap-6">
    <img src="<%= botAvatar %>" alt="Bot Avatar" class="w-16 h-16 rounded-full border-4 border-discord-primary bg-discord-dark-400" />
    <div class="flex-1">
        <div class="text-xl font-bold text-discord-white mb-1 flex items-center gap-2">
            <%= botName %>
            <span class="text-xs bg-discord-primary/20 text-discord-primary px-2 py-0.5 rounded">ID: <%= botId %></span>
        </div>
        <div class="text-discord-white/60 text-sm mb-1 flex flex-wrap gap-4">
            <span>Estado: 
                <span class="inline-flex items-center gap-1">
                    <% if (botStatus === 'online') { %>
                        <span class="inline-block w-2 h-2 bg-green-500 rounded-full"></span> Online
                    <% } else if (botStatus === 'idle') { %>
                        <span class="inline-block w-2 h-2 bg-yellow-400 rounded-full"></span> Idle
                    <% } else if (botStatus === 'dnd') { %>
                        <span class="inline-block w-2 h-2 bg-red-500 rounded-full"></span> No molestar
                    <% } else { %>
                        <span class="inline-block w-2 h-2 bg-gray-400 rounded-full"></span> Offline
                    <% } %>
                </span>
            </span>
            <span>Uptime: <%= botUptime %></span>
            <span>Usuarios: <%= botUsers %></span>
            <span>Canales: <%= botChannels %></span>
            <span>Versión Node: <%= nodeVersion %></span>
            <span>Versión Discord.js: <%= discordjsVersion %></span>
        </div>
        <div class="text-discord-white/40 text-xs">
            Creado: <%= botCreatedAt %>
        </div>
    </div>
</div>


<div class="card mt-6" x-data="{ copied: false }">
    <div class="flex items-center justify-between">
        <div>
            <div class="text-lg font-semibold mb-1">Invitar <%= botName %> a tu servidor</div>
            <div class="text-discord-white/60 text-sm">Haz clic en el botón para copiar el enlace de invitación con permisos de administrador.</div>
        </div>
        <button @click="navigator.clipboard.writeText($refs.inviteUrl.value); copied = true; setTimeout(() => copied = false, 1200)" :class="copied ? 'bg-green-600' : ''" class="btn-primary ml-4 flex items-center space-x-2">
            <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16h8M8 12h8m-6 8h6a2 2 0 002-2V6a2 2 0 00-2-2H8a2 2 0 00-2 2v2" />
            </svg>
            <span x-text="copied ? '¡Copiado!' : 'Copiar enlace'"></span>
        </button>
    </div>
    <input x-ref="inviteUrl" id="inviteUrl" type="text" readonly class="mt-3 w-full px-3 py-2 bg-discord-dark-400 border border-discord-dark-100 rounded-md text-discord-white font-mono text-sm" value="https://discord.com/oauth2/authorize?client_id=<%= botId %>&permissions=8&scope=bot+applications.commands" />
</div>
