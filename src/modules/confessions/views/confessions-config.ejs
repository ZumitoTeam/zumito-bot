<div class="card animate__animated animate__fadeIn">
    <div class="flex items-center justify-between mb-6">
        <h2 class="text-2xl font-bold text-discord-primary"><%= t('confession.config') %></h2>
        <div class="p-2 bg-discord-primary/10 rounded-full">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-discord-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
            </svg>
        </div>
    </div>
    
    <!-- Módulo explicativo con diseño atractivo -->
    <div class="bg-discord-dark-400/30 rounded-lg mb-8 overflow-hidden">
        <div class="bg-gradient-to-r from-discord-primary/20 to-discord-primary/5 p-4 border-l-4 border-discord-primary">
            <h3 class="text-lg font-semibold text-discord-white mb-2 flex items-center">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 text-discord-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <%= t('confession.explainerTitle') %>
            </h3>
            <p class="text-discord-white/80 mb-4">
                <%= t('confession.explainerDesc') %>
            </p>
            
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mt-6">
                <div class="bg-discord-dark-300/50 p-3 rounded-lg flex items-start">
                    <div class="bg-discord-primary/20 p-2 rounded-full mr-3 flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-discord-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z" />
                        </svg>
                    </div>
                    <div>
                        <h4 class="font-medium text-discord-white text-sm"><%= t('confession.feature1Title') %></h4>
                        <p class="text-discord-white/60 text-xs mt-1"><%= t('confession.feature1Desc') %></p>
                    </div>
                </div>
                
                <div class="bg-discord-dark-300/50 p-3 rounded-lg flex items-start">
                    <div class="bg-discord-primary/20 p-2 rounded-full mr-3 flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-discord-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                        </svg>
                    </div>
                    <div>
                        <h4 class="font-medium text-discord-white text-sm"><%= t('confession.feature2Title') %></h4>
                        <p class="text-discord-white/60 text-xs mt-1"><%= t('confession.feature2Desc') %></p>
                    </div>
                </div>
                
                <div class="bg-discord-dark-300/50 p-3 rounded-lg flex items-start">
                    <div class="bg-discord-primary/20 p-2 rounded-full mr-3 flex-shrink-0">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-discord-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z" />
                        </svg>
                    </div>
                    <div>
                        <h4 class="font-medium text-discord-white text-sm"><%= t('confession.feature3Title') %></h4>
                        <p class="text-discord-white/60 text-xs mt-1"><%= t('confession.feature3Desc') %></p>
                    </div>
                </div>
            </div>
            
            <div class="bg-discord-dark-200/50 p-3 rounded-lg mt-4 border-l-2 border-discord-yellow">
                <div class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-discord-yellow mr-2 flex-shrink-0 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z" />
                    </svg>
                    <p class="text-discord-white/80 text-sm">
                        <%- t('confession.instructions') %>
                    </p>
                </div>
            </div>
        </div>
    </div>
    
    <form method="POST" action="/panel/<%= guild.id %>/confessions" class="space-y-6">
        <div class="transition-all duration-200 hover:shadow-md p-4 rounded-lg bg-discord-dark-400/30">
            <label class="flex items-center gap-2 mb-2 text-lg font-medium text-discord-white">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-discord-primary" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
                </svg>
                <%= t('confession.channelLabel') %>
            </label>
            <div class="relative">
                <select name="channelId" class="w-full bg-discord-dark-300 text-white pl-10 pr-4 py-3 rounded-lg border border-discord-dark-100 focus:border-discord-primary focus:ring focus:ring-discord-primary/20 focus:outline-none transition-all duration-200">
                    <% channels.forEach(c => { %>
                        <option value="<%= c.id %>" <%= guildSettings && guildSettings.confessionsChannelId === c.id ? 'selected' : '' %>><%= c.name %></option>
                    <% }) %>
                </select>
                <div class="absolute left-3 top-1/2 transform -translate-y-1/2 text-discord-white/60">
                    #
                </div>
            </div>
            <p class="text-xs text-discord-white/60 mt-2"><%= t('confession.channelHelp') %></p>
        </div>
        <div class="flex justify-end pt-2">
            <button type="submit" class="btn-primary flex items-center gap-2 px-6 py-3 shadow-lg hover:translate-y-[-2px] transition-all duration-200">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <%= t('confession.saveButton') %>
            </button>
        </div>
    </form>
</div>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" />
