<div class="p-6">
  <h1 class="text-2xl font-semibold mb-4"><%= botName %> — Cumpleaños</h1>
  <form method="POST" class="space-y-4">
    <div>
      <label for="channelId" class="block text-sm font-medium">Canal de cumpleaños</label>
      <select id="channelId" name="channelId" class="mt-1 block w-full rounded bg-[#202225] p-2">
        <% channels.forEach(c => { %>
          <option value="<%= c.id %>" <%= (config.channelId === c.id) ? 'selected' : '' %>>#<%= c.name %></option>
        <% }) %>
      </select>
    </div>
    <button type="submit" class="px-4 py-2 rounded bg-indigo-600 hover:bg-indigo-500">Guardar</button>
  </form>
</div>

